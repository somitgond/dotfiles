(defcfg
  process-unmapped-keys yes
)

(defsrc
)

(deftemplate charmod (char mod)
  (switch 
    ((key-timing 3 less-than 200)) $char break
    () (tap-hold-release-timeout 200 500 $char $mod $char) break
  )
)

(deflayermap (main)
  a (t! charmod a lmet)
  s (t! charmod s lsft)
  d (t! charmod d lalt)
  f (t! charmod f lctl)
  j (t! charmod j rctl)
  k (t! charmod k lalt)
  l (t! charmod l rsft)
  ; (t! charmod ; rmet)
)
