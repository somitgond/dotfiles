                    , Run Com "uname" ["-s","-r"] "" 36000
                    , Run Battery
                    [ "-t", "<fc=#7aa2f7>Û±êã BAT:</fc> <acstatus>"
                    , "-L", "20"
                      , "-H", "80"
                      , "-l", "#f7768e"
