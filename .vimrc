"let mapleader=" " 

"set linenumber
set relativenumber number

" set compatiblity to vim only
set nocompatible

" set line wrapping
set wrap
set noshowmatch

"cursor theme
set guicursor=a:ver20

"Encoding
set encoding=utf-8
set ignorecase
set shiftwidth=4
set mouse=a

"syntax on
set autoindent
set expandtab
set tabstop=4
set clipboard+=unnamedplus
filetype plugin on
set ttyfast
set noswapfile
" Status bar
set laststatus=2
" Wildmode
set wildmode=longest,list,full

" Fast command completion 
set wildmenu

"display matching brackets
set showmatch

" status line customization 
set laststatus=2


